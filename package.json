{
  "name": "supabase-tanstack-zod-codegen",
  "version": "1.0.9",
  "description": "A CLI tool to automatically generate TanStack Query hooks, Zod schemas, and TypeScript types for your Supabase Database.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build && npm run test",
    "lint": "eslint --cache \"src/**/*.{js,ts}\"",
    "lint:fix": "eslint --cache --fix \"src/**/*.{js,ts}\"",
    "test": "jest",
    "test-cli": "npm run build && ts-node ./dist/cli.js",
    "test-cli-config-js": "npm run test-cli -- generate example-codegen.config.js",
    "test-cli-config-json": "npm run test-cli -- generate example-codegen.config.json",
    "test-cli-options": "npm run test-cli -- generate --outputPath example/generated.ts --typesPath example/database.types.ts --supabaseExportName supabase",
    "test-generate": "npm run build && node scripts/generate.js",
    "test:watch": "jest --watch"
  },
  "bin": {
    "supabase-tanstack-zod-codegen": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "code-generation",
    "react-hooks",
    "supabase",
    "typescript",
    "database",
    "automatic",
    "tanstack-query",
    "react-query",
    "zod",
    "validation",
    "crud",
    "utilities",
    "developer-tools"
  ],
  "author": "Omer Yucel <me@omeryucel.dev>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omerycll/supabase-tanstack-zod-codegen.git"
  },
  "bugs": {
    "url": "https://github.com/omerycll/supabase-tanstack-zod-codegen/issues"
  },
  "homepage": "https://github.com/omerycll/supabase-tanstack-zod-codegen#readme",
  "license": "MIT",
  "dependencies": {
    "pluralize": "^8.0.0",
    "prettier": "^2.8.8",
    "ts-morph": "^24.0.0",
    "yargs": "^17.7.2"
  },
  "peerDependencies": {
    "@supabase/supabase-js": "^2.20.0",
    "@tanstack/react-query": "^5.0.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/pluralize": "^0.0.29",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-security-node": "^1.1.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "npm run lint:fix"
  }
}
